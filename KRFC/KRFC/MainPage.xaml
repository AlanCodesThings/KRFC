<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KRFC.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Korean Flashcards" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Choose from one of the following categories to get started:" FontSize="Title" Padding="30,10,30,10" HorizontalOptions="Center"/>
        <Button ClassId ="foodButton" Text="Food" Clicked= "Button_Clicked"/>
        <Button ClassId ="transButton" Text="Transportation" Clicked="Button_Clicked"/>
        <Button ClassId ="actButton" Text="Actions"  Clicked="Button_Clicked"/>
        <Button ClassId ="placeButton" Text="Places" Clicked="Button_Clicked"/>
        <Button ClassId ="greetButton" Text="Everyday Greetings" Clicked="Button_Clicked"/>
    </StackLayout>


</ContentPage>
